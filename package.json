{
    "name": "Tunpass",
    "version": "1.0.0",
    "description": "Easy password management with Tunpass",
    "main": "app/main.js",
    "license": "MIT",
    "scripts": {
        "postinstall": "install-app-deps",
        "test": "npm run lint",
        "lint": "xo",
        "start": "electron .",
        "dist": "npm run dist:mac && npm run dist:deb && npm run dist:win",
        "dist:mac": "build --mac",
        "dist:linux": "build --linux deb tar.xz",
        "dist:win": "build --win --ia32",
        "dist:win64": "build --win --ia64",
        "release": "build"
    },
    "devDependencies": {
        "devtron": "^1.4.0",
        "electron": "^2.0.7",
        "electron-builder": "^19.37.2",
        "electron-devtools-installer": "^2.2.1",
        "eslint-config-rem": "^3.2.0",
        "minimist": "^1.2.0",
        "xo": "^0.18.2"
    },
    "xo": {
        "extends": "rem",
        "esnext": true
    },
    "build": {
        "appId": "com.thephuc.Tunpass",
        "productName": "Tunpass",
        "asar": true,
        "dmg": {
            "background": "build/background@2x.png",
            "contents": [
                {
                    "x": 410,
                    "y": 150,
                    "type": "link",
                    "path": "/Applications"
                },
                {
                    "x": 130,
                    "y": 150,
                    "type": "file"
                }
            ],
            "window": {
                "width": 494,
                "height": 270
            }
        },
        "mac": {
            "category": "public.app-category.developer-tools"
        },
        "win": {
            "target": "nsis"
        },
        "nsis": {
            "oneClick": false
        },
        "linux": {
            "category": "public.app-category.developer-tools"
        }
    }
}
